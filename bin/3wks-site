#!/bin/sh

# don't die on npm not installing, as it will not work on Heroku
npm install

# from this point on, fail the build on anything that doesn't workout
set -e errexit;

# make sure yeoman and coffee are available 
export PATH="node_modules/yeoman/bin:node_modules/.bin:$PATH"
export no_stats=true

# start the webserver
coffee server.coffee